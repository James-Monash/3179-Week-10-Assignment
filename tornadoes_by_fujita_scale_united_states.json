{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "width": 800,
  "height": 600,
  "background": "#c6dbef",
  "projection": {
    "type": "mercator",
    "center": [-98, 38],
    "scale": 700
  },
  "title": {
    "text": "U.S. Tornadoes (2010â€“2024)",
    "anchor": "start",
    "fontSize": 20,
    "font": "Helvetica",
    "color": "#333",
    "subtitle": "Color-coded by Fujita rating"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/James-Monash/3179-Week-10-Assignment/main/mainland_united_states.json",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_admin_1_states_provinces"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#e0e0e0",
        "stroke": "white",
        "strokeWidth": 1
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/James-Monash/3179-Week-10-Assignment/main/10_degree_graticules_for_united_states.json",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_graticules_10"
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#ccc",
        "strokeWidth": 0.9
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/James-Monash/3179-Week-10-Assignment/main/Tornado_All_2010_2024_Australia.csv",
        "format": { "type": "csv" }
      },
      "transform": [
        { "filter": "indexof(selectedRatings, datum.TOR_F_SCALE) >= 0" }
      ],
      "mark": { "type": "point", "filled": true, "size": 30, "tooltip": true },
      "encoding": {
        "longitude": { "field": "Longitude", "type": "quantitative" },
        "latitude": { "field": "Latitude", "type": "quantitative" },
        "color": {
          "field": "TOR_F_SCALE",
          "type": "nominal",
          "scale": {
            "domain": ["F0","F1","F2","F3","F4","F5"],
            "range": ["#999999","#E69F00","#56B4E9","#009E73","#F0E442","#984ea3"]
          },
          "legend": { "title": "Fujita rating" }
        }
      }
    }
  ],
  "config": {
    "legend": {
      "labelFontSize": 12,
      "titleFontSize": 14
    },
    "view": { "stroke": "transparent" }
  }
}
